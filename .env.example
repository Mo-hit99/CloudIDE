# Cloud IDE Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment mode (development, production, test)
NODE_ENV=development

# Application domain (for production)
DOMAIN=localhost

# =============================================================================
# APPLICATION PORTS
# =============================================================================

# Backend API port
BACKEND_PORT=5000

# Frontend development port
FRONTEND_PORT=5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=cloudIDE

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# Session Secret (CHANGE THIS IN PRODUCTION!)
SESSION_SECRET=your-session-secret-change-this-in-production

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Host (usually unix:///var/run/docker.sock)
DOCKER_HOST=unix:///var/run/docker.sock

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for frontend (development)
VITE_API_URL=http://localhost:5000

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

# Redis Password (for production)
REDIS_PASSWORD=defaultpassword

# Redis URL
REDIS_URL=redis://redis:6379

# =============================================================================
# SSL CONFIGURATION (Production only)
# =============================================================================

# SSL Certificate paths
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.ts,.jsx,.tsx,.py,.java,.html,.css,.json,.md,.txt,.yml,.yaml,.xml,.sql,.sh,.dockerfile

# Development Container Configuration
DEV_WORKSPACE_PATH=./workspace
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5